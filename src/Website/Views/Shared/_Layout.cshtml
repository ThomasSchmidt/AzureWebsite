<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Schmidt</title>
    <link rel="stylesheet" asp-href-include="~/css/*.*" asp-append-version="true" />
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <header>
        <nav>
            <div>
                <div>
                    <ul>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; @DateTime.Now.Year - Powered by @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription
        </div>
    </footer>

    <script asp-src-include="~/js/*.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
